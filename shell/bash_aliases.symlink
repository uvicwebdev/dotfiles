#  ---------------------------------------------------------------------------
#
#  BASH_ALIASES
#
#  Sections:
#  1.   Files and Folders
#  2.   Cat
#  3.   Bash
#  A.   Misc
#
#  ---------------------------------------------------------------------------

#   -------------------------------
#   1.  Files and Folders
#   -------------------------------

alias ls='ls -F'
alias ll='ls -al'
alias la='ls -A'
alias l='ls -CF'
alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'

# Host a simple http server
alias simpleserver="python -m SimpleHTTPServer"


#   -------------------------------
#   2. Cat
#   -------------------------------
alias mdcat="pandoc -f markdown -t plain"
alias catex="pandoc -f latex -t plain"
alias catc="vimcat"

#   -------------------------------
#   4.  Bash
#   -------------------------------

alias refresh=". ~/.bashrc"
alias plz='sudo $(fc -ln -1)'

#   -------------------------------
#   5.  System
#   -------------------------------

#   OSX Specific Setup
#   ------------------------------------------------------------
if [ -x /usr/bin/open ]; then
    alias f='open -a Finder ./'
    alias showfiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
    alias hidefiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

    ql () { qlmanage -p "$*" >& /dev/null; }    # ql:           Opens any file in MacOS Quicklook Preview
fi

#   Cygwin Specific Setup
#   ------------------------------------------------------------
if [ -x /usr/bin/cygstart ]; then
    alias open='cygstart'
fi

#   Ubuntu Specific Setup
#   ------------------------------------------------------------
if [ -x /usr/bin/xdg-open ]; then
    open(){
    	(xdg-open $1 2> /dev/null > /dev/null &);
    }
fi

alias ~="cd ~"
alias c='clear'


#   -------------------------------
#   A.  Misc
#   -------------------------------

alias newnotes="notedown -o"
alias lastnote="notedown -l"
alias startlecture="lastnote; newnotes"
